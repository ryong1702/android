<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".join.IdentityVerificationActivity">

    <include layout="@layout/toolbar_back_title" android:id="@+id/toolbar_identity_verification" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            android:textStyle="bold"
            android:text="@string/text_enter_phone_number" />


        <EditText
            android:id="@+id/et_phone"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:ems="10"
            android:hint="@string/phone_number_input"
            android:layout_marginTop="20dp"
            android:inputType="phone"
            android:digits="0123456789"
            android:padding="10dp"
            android:maxLength="11"
            android:textColorHint="@color/disabled"
            android:textSize="16sp"/>

        <TextView
            android:id="@+id/tv_text3"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:textColor="@color/tertiary"
            android:text="@string/text_next_verification"/>

    </LinearLayout>
    <include layout="@layout/button_next" android:id="@+id/button_next" />
</LinearLayout>