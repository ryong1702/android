<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".join.RegisterPasswordActivity">

    <include layout="@layout/toolbar_back_title" android:id="@+id/toolbar_register_password" />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginStart="15dp"
        android:layout_marginEnd="15dp"
        android:orientation="vertical">
        <TextView
            android:id="@+id/tv_text1"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textStyle="bold"
            android:textSize="18sp"
            android:text="@string/text_password_input" />

        <TextView
            android:id="@+id/tv_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="@string/text_password" />

        <EditText
            android:id="@+id/et_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:ems="10"
            android:hint="@string/text_password_type"
            android:maxLength="12"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColorHint="@color/disabled"
            android:autofillHints="@string/text_password_type" />

        <TextView
            android:id="@+id/tv_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>

        <TextView
            android:id="@+id/tv_re_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp"
            android:textSize="14sp"
            android:text="@string/text_password_confirm" />

        <EditText
            android:id="@+id/et_re_password"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="5dp"
            android:background="@drawable/edittext_rounded_corner_rectangle"
            android:ems="10"
            android:maxLength="12"
            android:hint="@string/text_password_one_more"
            android:inputType="textPassword"
            android:padding="10dp"
            android:textSize="15sp"
            android:textColorHint="@color/disabled"
            android:autofillHints="@string/text_password_one_more" />

        <TextView
            android:id="@+id/tv_re_message"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:visibility="gone"/>
    </LinearLayout>
    <include layout="@layout/button_next" android:id="@+id/button_next" />
</LinearLayout>